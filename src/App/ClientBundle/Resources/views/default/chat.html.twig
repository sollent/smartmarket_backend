{% extends '@AppClient/common.html.twig' %}

{% block stylesheet %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('build/catalog.css') }}">
	<link rel="stylesheet" href="{{ asset('assets/scss/test.css') }}">
{% endblock %}

{% block title %}Чат{% endblock %}

{% block body %}
	
	
	<style>
		.messages {
			height: 100%;
			width: 100%;
			padding: 20px;
			display: block;
		}
		.message {
			padding: 20px;
		}
	</style>
	
	{% block header %}
		{{ parent() }}
	{% endblock %}
	
	{% block wrapper_start %} {{ parent() }} {% endblock %}
	
	{% block main %}
		
		<div class="container">
			
			
			<div class="row">
				<div class="col s12 m12">
					<div class="card" style="min-height: 500px;">
						<div class="messages" id="chatWrapper">
						</div>
					</div>
				</div>
			</div>
			
			
			<div class="row">
				<div class="col s12 m7 offset-m2">
					<div class="card" style="padding: 20px">
						<div class="row">
							<form class="col s12">
								<div class="row">
									<div class="input-field col s12">
										<input id="clientInput" type="text"  class="validate">
										<label for="clientInput">First Name</label>
									</div>
								</div>
							</form>
						</div>
						<button onclick="onSendMessage()" style="width: 100%;" class="btn waves-effect waves-light" type="submit" name="action">Submit
							<i class="material-icons right">send</i>
						</button>
					</div>
				</div>
			</div>
		
		</div>
	
	{% endblock %}
	
	{% block wrapper_end %} {{ parent() }} {% endblock %}
	
	{% block footer %}
		{{ parent() }}
	{% endblock %}
	
	{% block javascripts %}
		{{ parent() }}
		<script src="{{ asset('assets/libs/materialize-js/js/test.js') }}"></script>
		<script src="{{ asset('assets/js/chat.js') }}"></script>
	{% endblock %}

{% endblock %}